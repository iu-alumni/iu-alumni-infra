# ─────────────────────────────────────────────────────────────
# Environment variables for Docker stack deployment
# Copy to .env and fill in actual values before deploying.
# ─────────────────────────────────────────────────────────────

# ── Domain ───────────────────────────────────────────────
# alumap-prod.escalopa.com (prod) or alumap-test.escalopa.com (test)
DOMAIN=alumap-prod.escalopa.com

# ── Docker images (from GHCR) ───────────────────────────
# Update these with your actual GitHub org/repo paths
FRONTEND_IMAGE=ghcr.io/iu-alumni/iu-alumni-frontend:main
BACKEND_IMAGE=ghcr.io/iu-alumni/iu-alumni-backend:main
BOT_IMAGE=ghcr.io/iu-alumni/iu-alumni-bot:main

# ── PostgreSQL ───────────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here
BACKEND_DB=iu_alumni_db
BOT_DB=bot_db

# ── Backend ──────────────────────────────────────────────
SECRET_KEY=CHANGE_ME_random_jwt_secret
ADMIN_EMAIL=admin@innopolis.university
ADMIN_PASSWORD=CHANGE_ME_admin_password
CORS_ORIGINS=https://alumap-prod.escalopa.com
ENVIRONMENT=PROD
EMAIL_HASH_SECRET=CHANGE_ME_random_hash_secret

# ── Email (SMTP) ────────────────────────────────────────
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM=noreply@innopolis.university
MAIL_FROM_NAME=IU Alumni

# ── Telegram Bot ─────────────────────────────────────────
TELEGRAM_TOKEN=CHANGE_ME_telegram_bot_token
ADMIN_CHAT_ID=-4725261280
MINI_APP_URL=https://alumap-prod.escalopa.com

# ── MinIO ────────────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_minio_password

# ── Grafana ──────────────────────────────────────────────
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_grafana_password
