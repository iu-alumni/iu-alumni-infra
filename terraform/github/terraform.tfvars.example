# Copy this to terraform.tfvars (gitignored) and fill in values.
# Run: cp terraform.tfvars.example terraform.tfvars

github_token = "ghp_..."
github_org   = "iu-alumni"

# ── Testing environment ──────────────────────────────────────────────────────

# Server
testing_server_host    = "1.2.3.4"
testing_server_user    = "deploy"
testing_server_ssh_key = <<-EOT
  -----BEGIN OPENSSH PRIVATE KEY-----
  ...
  -----END OPENSSH PRIVATE KEY-----
EOT

# Deployment
testing_deploy_dir  = "/home/deploy/iu-alumni"
testing_domain      = "alumni-test.example.com"
testing_environment = "PROD"

# SSL
testing_certbot_email = "admin@example.com"

# PostgreSQL
testing_postgres_user     = "postgres"
testing_postgres_password = "changeme"
testing_postgres_db        = "iu_alumni_db"

# Backend
testing_secret_key        = "changeme"
testing_admin_email       = "admin@example.com"
testing_admin_password    = "changeme"
testing_email_hash_secret = "changeme"

# Mail
testing_mail_username  = ""
testing_mail_password  = ""
testing_mail_from      = "noreply@example.com"
testing_mail_from_name = "IU Alumni"
testing_mail_server    = "smtp.gmail.com"
testing_mail_port      = "587"

# Telegram
testing_telegram_token = ""
testing_admin_chat_id  = ""
testing_mini_app_url   = "https://alumni-test.example.com"

# Grafana
testing_grafana_user     = "admin"
testing_grafana_password = "changeme"

# Mobile
testing_api_base_url = "https://api.alumni-test.example.com"

